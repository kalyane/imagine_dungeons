doctype html 
html 
    head 
        title Your Games - Imagine Dungeons 
        link(rel="stylesheet" href="/static/css/style.css")
        link(rel="icon" type="image/x-icon" href="/static/images/favicon.ico")
        script(src="https://kit.fontawesome.com/534e6fef90.js" crossorigin="anonymous")
    body 
        include includes/nav
        .games 
            script. 
                function createGame() {
                    window.location = '/games/create';
                }
                function deleteGame(id) {
                    var answer = window.confirm("Do you want to delete this game?");
                    if (answer) {
                        window.location = '/games/delete/'+id;
                    }
                }
            div(onclick="createGame()")#create-game
                .content
                    div
                        i.fa-solid.fa-plus
                        br
                        br
                        p Create Game
            if games
                each game in games 
                    div.game-card
                        .content
                            img(src="/static/images/wall.png")
                            .icons 
                                a(href="/games/edit/"+game._id)
                                    i.fa-solid.fa-pen-to-square
                                a(href="/games/play/"+game._id)
                                    i.fa-solid.fa-play
                                a(onclick="deleteGame("+game._id+")")
                                    i.fa-solid.fa-trash-can
                            .subcontent
                                h4= game.name
                                p Last updated on #{game.updatedAt}

        include includes/footer 
            