doctype html 
html 
    head 
        title Log in - Imagine Dungeons 
        link(rel="stylesheet" href="/static/css/style.css")
        link(rel="icon" type="image/x-icon" href="/static/images/favicon.ico")
        link(rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.11.0/css/all.css")
    body 
        #loading
            .loading-animation 
            p Loading
            
        .bg
            .box_center
                a(href="/").logo Imagine Dungeons 
                form(action="/login" method="post") 
                    label(for="email") Email Address 
                    br
                    input(type="email" id="email" name="email" placeholder="email@address.com")
                    br
                    label(for="password") Password  
                    br
                    input(type="password" id="password" name="password" placeholder="password")
                    br
                    input(type="submit" value="LOGIN")

                div.link_question No account yet? 
                    a(href="/signup") Signup now

script.
    window.messages = [!{JSON.stringify(message)}]
    window.addEventListener("load", function() {
        const loading = document.querySelector("#loading");
        loading.style.display = "none";
    });

script(src="/static/bundles/message_handler_bundle.js")